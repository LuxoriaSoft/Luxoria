<Window
    x:Class="LuxExport.Export"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    >

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="150" MaxWidth="400" />
            <ColumnDefinition Width="*" MinWidth="300" MaxWidth="500" />
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Padding="10, 10, 10, 0">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Export To" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <DropDownButton Content="HardDrive" VerticalAlignment="Center">
                    <DropDownButton.Flyout>
                        <MenuFlyout Placement="Bottom">
                            <MenuFlyoutItem Text="HardDrive" />
                            <MenuFlyoutItem Text="Web" />
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Grid.Column="0" Padding="10,10,0,10">
            <ScrollView HorizontalScrollMode="Disabled" VerticalScrollMode="Enabled" HorizontalAlignment="Stretch">
                <StackPanel Orientation="Vertical">
                    <Expander Header="Luxoria Presets" Width="Auto" HorizontalAlignment="Stretch">
                        <ListView HorizontalContentAlignment="Left">
                            <TextBlock Text="PNG" />
                            <TextBlock Text="JPEG HighQuality" />
                            <TextBlock Text="JPEG MediumQuality" />
                            <TextBlock Text="JPEG LowQuality" />
                        </ListView>
                    </Expander>
                    <Expander Header="User Presets" Width="Auto" HorizontalAlignment="Stretch">
                        <ListView HorizontalContentAlignment="Left">
                            <TextBlock Text="MyPreset1" />
                        </ListView>
                    </Expander>
                </StackPanel>
            </ScrollView>
        </Border>

        <Border Grid.Row="1" Grid.Column="1" Padding="10">
            <ScrollView HorizontalScrollMode="Disabled" VerticalScrollMode="Enabled" HorizontalAlignment="Stretch">
                <StackPanel Orientation="Vertical">
                    <Expander Header="Export Location" Padding="5" Width="Auto" HorizontalAlignment="Stretch" HorizontalContentAlignment="Left">
                        <StackPanel Orientation="Vertical" Padding="10" HorizontalAlignment="Left" Spacing="5">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                <TextBlock Text="Export To" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <DropDownButton Content="Desktop" VerticalAlignment="Center">
                                    <DropDownButton.Flyout>
                                        <MenuFlyout Placement="Bottom">
                                            <MenuFlyoutItem Text="Custom Path"/>
                                            <MenuFlyoutSeparator/>
                                            <MenuFlyoutItem Text="Same path as original file"/>
                                            <MenuFlyoutSeparator/>
                                            <MenuFlyoutItem Text="Desktop"/>
                                            <MenuFlyoutItem Text="Document"/>
                                            <MenuFlyoutItem Text="Pictures"/>
                                        </MenuFlyout>
                                    </DropDownButton.Flyout>
                                </DropDownButton>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Folder" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBox Text="C:\Users\Public\Desktop" VerticalAlignment="Center" HorizontalAlignment="Stretch" Width="Auto"/>
                             </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <CheckBox Content="Create Subfolder" IsChecked="True" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBox Text="Luxoria" VerticalAlignment="Center" HorizontalAlignment="Stretch" Width="Auto"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Existing File" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <DropDownButton Content="Overwrite" VerticalAlignment="Center">
                                    <DropDownButton.Flyout>
                                        <MenuFlyout Placement="Bottom">
                                            <MenuFlyoutItem Text="Overwrite"/>
                                            <MenuFlyoutItem Text="Rename"/>
                                            <MenuFlyoutItem Text="Skip"/>
                                        </MenuFlyout>
                                    </DropDownButton.Flyout>
                                </DropDownButton>
                            </StackPanel>
                            
                        </StackPanel>
                    </Expander>
                    <Expander Header="File Naming" Padding="10" Width="Auto" HorizontalAlignment="Stretch">

                    </Expander>
                    <Expander Header="File Settings" Padding="10" Width="Auto" HorizontalAlignment="Stretch">

                    </Expander>
                    <Expander Header="Metadata" Padding="10" Width="Auto" HorizontalAlignment="Stretch">

                    </Expander>
                    <Expander Header="WaterMark" Padding="10" Width="Auto" HorizontalAlignment="Stretch">

                    </Expander>
                </StackPanel>
            </ScrollView>
        </Border>

        <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Padding="10,0,10,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel" Margin="0,0,10,0"/>
                <Button Content="Export" Margin="0,0,10,0"/>
            </StackPanel>
        </Border>

    </Grid>
    
    
</Window>
