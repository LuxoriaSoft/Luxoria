<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
	<TargetFramework>net9.0-windows10.0.26100.0</TargetFramework>
	<TargetPlatformMinVersion>10.0.17763.0</TargetPlatformMinVersion>
	<RuntimeIdentifiers>win-x86;win-x64;win-arm64</RuntimeIdentifiers>
	<UseWinUI>true</UseWinUI>
	  
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <PropertyGroup>
	<WindowsSdkPackageVersion>10.0.26100.57</WindowsSdkPackageVersion>
	<EnablePreviewMsixTooling>true</EnablePreviewMsixTooling>
	<GenerateLibraryLayout>true</GenerateLibraryLayout>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Views\legacy\ImportView.xaml" />
    <None Remove="Views\legacy\IndexicationView.xaml" />
    <None Remove="Views\legacy\PropertiesView.xaml" />
    <None Remove="Views\v3\ResourcesExplorerView.xaml" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="CommunityToolkit.WinUI.Controls.Primitives" Version="8.1.240916" />
    <PackageReference Include="MetadataExtractor" Version="2.8.1" />
    <PackageReference Include="Microsoft.Data.Sqlite" Version="9.0.2" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="SkiaSharp" Version="3.116.1" />

	<PackageReference Include="Luxoria.SDK" Version="1.0.0" />
  </ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Windows.SDK.BuildTools" Version="10.0.26100.1742" />
		<PackageReference Include="Microsoft.WindowsAppSDK" Version="1.6.250108002" />
		<PackageReference Include="System.Drawing.Common" Version="9.0.10" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\..\..\Luxoria.App\Luxoria.GModules\Luxoria.GModules.csproj" />
		<ProjectReference Include="..\..\..\Luxoria.App\Luxoria.Modules\Luxoria.Modules.csproj" />
	</ItemGroup>


	<ItemGroup>
	  <Folder Include="Components\" />
	  <Folder Include="Views\legacy\" />
	  <Folder Include="Views\v3\" />
	</ItemGroup>


	<ItemGroup>
	  <Page Update="Views\v3\ResourcesExplorerView.xaml">
		  <Generator>MSBuild:Compile</Generator>
		  <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </Page>
	</ItemGroup>

	<ItemGroup>
	  <Page Update="Views\legacy\ImportView.xaml">
	    <Generator>MSBuild:Compile</Generator>
		<CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </Page>
	  <Page Update="Views\legacy\MainImportView.xaml">
		<Generator>MSBuild:Compile</Generator>
		<CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </Page>
      <Page Update="Views\legacy\PropertiesView.xaml">
		<Generator>MSBuild:Compile</Generator>
		<CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </Page>
	  <Page Update="Views\legacy\IndexicationView.xaml">
		<Generator>MSBuild:Compile</Generator>
		<CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </Page>
	</ItemGroup>
</Project>
