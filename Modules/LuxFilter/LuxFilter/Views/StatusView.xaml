<Page
    x:Class="LuxFilter.Views.StatusView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="*"/>
            <!-- Scrollable content -->
            <RowDefinition Height="Auto"/>
            <!-- Status and Progress -->
        </Grid.RowDefinitions>

        <!-- Title Message -->
        <TextBlock x:Name="StatusMessage"
                   Text="Waiting for pipeline..."
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="DarkSlateGray"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"
                   Grid.Row="0"/>

        <!-- Progress Ring for processing -->
        <StackPanel Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Spacing="10">
            <ProgressRing x:Name="ProgressIndicator"
                          Width="40" Height="40"
                          IsActive="False"/>
            <TextBlock x:Name="ProcessingText"
                       Text="Processing..."
                       FontSize="16"
                       FontStyle="Italic"
                       Visibility="Collapsed"/>
        </StackPanel>

        <!-- Scrollable Score List -->
        <ListBox x:Name="ScoreListViewer" ItemsSource="{Binding ScoreList}" Margin="0,10" Grid.Row="1" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Score}" VerticalAlignment="Center" Margin="5,0" FontWeight="SemiBold" Foreground="RoyalBlue"/>
                        <TextBlock Text="{Binding Status}" VerticalAlignment="Center" Margin="5,0" Foreground="DarkSlateGray"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Page>
